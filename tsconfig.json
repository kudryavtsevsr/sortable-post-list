{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["vitest/globals"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "node_modules/.pnpm/vitest@1.4.0_happy-dom@14.3.10_jsdom@24.0.0_sass@1.72.0/node_modules/vitest/globals.d.ts",
    "node_modules/.pnpm/vitest@1.4.0_happy-dom@14.3.10_jsdom@24.0.0_sass@1.72.0/node_modules/vitest/globals.d.ts",
    "node_modules/.pnpm/vitest@1.4.0_happy-dom@14.3.10_jsdom@24.0.0_sass@1.72.0/node_modules/vitest/globals.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
